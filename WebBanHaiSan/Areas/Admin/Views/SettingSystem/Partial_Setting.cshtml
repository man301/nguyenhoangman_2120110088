
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin() {
            $('#load_page').html('Đang lưu...');
        }
        function OnSuccess(rs) {

        }
        function OnFailure(rs) {

        }
    </script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                        @*<li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Hình ảnh</a></li>*@
                        <li class="nav-item"><a class="nav-link" href="#settingSEO" data-toggle="tab">SEO</a></li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">
                            <div class="form-group">
                                <label>Tiêu đề trang</label>
                                <input type="text" name="SettingTitle" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Logo</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="text" name="SettingLogo" id="SettingLogo" class="form-control" />
                                    </div>
                                    <div class="input-group-append">
                                        <input type="button" value="Tải ảnh" onclick="BrowseServer('SettingLogo');" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Hotline</label>
                                <input type="text" name="SettingHotline" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="SettingEmail" class="form-control" />
                            </div>
                        </div>
                        <!-- /.tab-pane -->

                        <div class="tab-pane" id="settingSEO">
                            <form class="form-horizontal">
                                <div class="form-group row">
                                    <label>Tiêu đề seo</label>
                                    <input type="text" name="SettingTitleSEO" class="form-control" />
                                </div>
                                <div class="form-group row">
                                    <label>Mô tả seo</label>
                                    <textarea type="text" name="SettingDesSEO" class="form-control" />
                                </div>
                                <div class="form-group row">
                                    <label>Từ khóa seo</label>
                                    <textarea type="text" name="SettingKeySEO" class="form-control" />
                                </div>

                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->

                </div><!-- /.card-body -->
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Lưu</button>
                </div>
            </div> <!-- /.card -->
            
        </div>
    </div>
}
